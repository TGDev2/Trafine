# Configuration de la base de données (PostgreSQL)
DATABASE_HOST=postgres
DATABASE_PORT=5432
POSTGRES_USER=postgres
POSTGRES_PASSWORD=postgres
POSTGRES_DB=trafine

# Secret pour le JWT (utilisé pour la signature des tokens)
JWT_SECRET=changeme

# Clé de chiffrement pour les données sensibles (doit être exactement de 32 caractères)
ENCRYPTION_KEY=changeme

# OAuth2 Configuration pour Google
GOOGLE_CLIENT_ID=CHANGEME
GOOGLE_CLIENT_SECRET=CHANGEME
GOOGLE_CALLBACK_URL=http://localhost:3000/auth/google/callback

#OAuth2 Configuration pour Twitter
TWITTER_CONSUMER_KEY=CHANGEME
TWITTER_CONSUMER_SECRET=CHANGEME
TWITTER_CALLBACK_URL=http://localhost:3000/auth/twitter/callback

# --- Compte administrateur initial ---
ADMIN_USERNAME=admin
ADMIN_PASSWORD=changeme

# Obtenez votre clé gratuite ici : https://openrouteservice.org/dev/#/signup
ORS_API_KEY=CHANGEME
# Base URL (laisser par défaut)
ORS_BASE_URL=https://api.openrouteservice.org

# Liste blanche des URL de redirection OAuth (séparées par des virgules)
# Exemple : http://localhost:3001,myapp://redirect
ALLOWED_REDIRECT_URLS=http://localhost:3001

ALLOWED_WEB_ORIGINS=http://localhost:3001

TLS_CERT_FILE=./certs/cert.pem
TLS_KEY_FILE=./certs/key.pem